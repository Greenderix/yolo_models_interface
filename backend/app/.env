# === Backend ===
# укажи список моделей через ; (id=путь)
MODELS=driver=./models/driver_yolov8n.pt;cabin=./models/cabin_yolov8n.pt;car_number=./models/car_number_yolo8n.pt
YOLOV8N_PATH=driver=./models/driver_yolov8n.pt;cabin=./models/cabin_yolov8n.pt;car_number=./models/car_number_yolo8n.pt
# явно задаём устройство (cuda / mps / cpu). если закомментировать — выберет автоматически
DEVICE=cpu

# домены, с которых фронт может обращаться к API
CORS=http://localhost:5174

# внешний сервис (если нужен)
EXTERNAL_URL=
EXTERNAL_TOKEN=

VIOLATIONS_URL=http://localhost:8002/violations/
VIOLATIONS_TOKEN=
HTTP_TIMEOUT=10
HTTP_RETRIES=2
HTTP_RETRY_BACKOFF=0.4

# === Frontend ===
# адрес бэкенда для фронта (Vite его пробросит как import.meta.env.VITE_API_BASE)
VITE_API_BASE=http://localhost:8003


# дефолтные поля (если не приходят из options)

DEFAULT_DRIVER_ID=1
DEFAULT_CAR_ID=1
DEFAULT_PASSENGERS=1
DEFAULT_LAT=55.7558
DEFAULT_LON=37.6176
DEFAULT_SPEED=42
DEFAULT_LOCATION=Moscow, RU

# batching
BATCH_FLUSH_SECONDS=2
BATCH_MAX=20

# throttling
THROTTLE_SECONDS=60

# window для «ремня» (мс) — если ремень не видели N мс, считаем нарушением
SEATBELT_WINDOW_MS=3000